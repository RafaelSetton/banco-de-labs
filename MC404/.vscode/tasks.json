{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "args": ["${fileBasenameNoExtension}.elf"],
            "group": {
                "kind": "build",
                "isDefault": true
						},
            "problemMatcher": ["$gcc"]
				},
        {
          "label": "Run QEMU",
          "type": "shell",
          "command": "echo 'QEMU started'; qemu-riscv32 -g 1234 ${workspaceFolder}/${fileBasenameNoExtension}.elf",
          "dependsOn": ["Build"],
          "isBackground": true,
          "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
								}
							],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": "QEMU started",
							}
						}
					]
				}
		]
}